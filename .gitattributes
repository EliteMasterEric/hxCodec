# Auto detect text files and perform LF normalization
* text=auto

# Automatically assign certain file types and folders to LFS
*.a filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.dylib filter=lfs diff=lfs merge=lfs -text
*.hdll filter=lfs diff=lfs merge=lfs -text
*.la filter=lfs diff=lfs merge=lfs -text
*.lib filter=lfs diff=lfs merge=lfs -text
*.ndll filter=lfs diff=lfs merge=lfs -text
*.so filter=lfs diff=lfs merge=lfs -text
lib/** filter=lfs diff=lfs merge=lfs -text
ndll/* filter=lfs diff=lfs merge=lfs -text
ndll/**/* filter=lfs diff=lfs merge=lfs -text
thirdparty/* filter=lfs diff=lfs merge=lfs -text
thirdparty/** filter=lfs diff=lfs merge=lfs -text
thirdparty/**/* filter=lfs diff=lfs merge=lfs -text
